<body>
    <br>
    <div class="container">
        <h1>Weather Application</h1>
        <br>
        <h3>Type a location name</h3>
        <h3>For example: Espoo or Espoo, Finland</h3>
        <br>
        <form class="form">
            <input type="text" id="userInput" name="location" placeholder="Enter a location here" required>
            <input type="submit" onclick="submitForm(event)">
        </form>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-2">
            </div>
            <div class="col-sm-8">
                <h1 id="place"></h1>
            </div>
            <div class="col-sm-2">
            </div>
        </div> 
        <div class="row">
            <div class="col-sm-2">
            </div>
            <div class="col-sm-4">
                <img id="symbol">
            </div>
            <div class="col-sm-4">
                <h1 id="temperature"></h1>
            </div>
            <div class="col-sm-2">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
            </div>
            <div class="col-sm-4">
                <h3 id="weather"></h3>
            </div>
            <div class="col-sm-4">
                <h3 id="time"></h3>
            </div>
            <div class="col-sm-2">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-2">
            </div>
            <div class="col-sm-4">
                <h3 id="windSpeed"></h3>
            </div>
            <div class="col-sm-4">
                <h3 id="windDirection"></h3>
            </div>
            <div class="col-sm-2">
            </div>
        </div>
    </div>
    <script src="body.js"></script>
</body>